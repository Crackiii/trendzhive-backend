generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROD")
}

model scrapping_links {
  id             Int      @id @default(autoincrement())
  country        String   @db.VarChar(50)
  country_short  String   @db.VarChar(50)
  category       String   @db.VarChar(50)
  category_short String   @db.VarChar(50)
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now())
}

model story_ids {
  id           Int      @id @default(autoincrement())
  country      String   @db.VarChar(100)
  category     String   @db.VarChar(100)
  story_id     String   @db.VarChar(200)
  related_link String   @db.VarChar(255)
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
}

model story_data {
  id               Int      @id @default(autoincrement())
  related_queries  Json  
  related_articles Json
  related_story_id String   @db.VarChar(255)
  created_at       DateTime @default(now())
  updated_at       DateTime @default(now())
}

model query_data {
  id            Int      @id @default(autoincrement())
  query         String
  links         Json
  related_story String   @db.VarChar(255)
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
}

model website_data {
  id                Int      @id @default(autoincrement())
  titles            String
  descriptions      Json
  keywords          String
  favicon           String
  social            Json
  images            Json
  html              String
  url               String
  all_images        Json
  is_trending       String
  related_articles  Json
  related_category  String
  related_country   String
  related_links     Json
  related_news      Json
  related_products  Json
  related_queries   Json
  related_query     String
  related_videos    Json
  short_description String
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now())
}

model scrapping_errors {
  id          Int      @id @default(autoincrement())
  status      String
  status_code String
  reason      String
  job_id      String
  data        String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
}
